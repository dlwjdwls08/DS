generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"   
}

model Student {
  id         Int          @id @default(autoincrement())
  name       String
  studentID  String       @unique
  grade      Int
  room       String
  classNo    String
  seat       Int

  memos      Memo[]
}

model Room {
  id      Int    @id @default(autoincrement())
  name    String @unique
  type    Int
  grade   Int
}

model RoomType {
  id      Int   @id @default(autoincrement())
  name    String
  type    Int @unique
}

model NightClass {
  id          Int     @id @default(autoincrement())
  studentID   String
  className   String
  day         Int
  studentName String
}

model Teacher {
  id      Int    @id @default(autoincrement())
  grade   Int
  classNo String
  name    String

  @@unique([grade, classNo])
}

model Leave {
  id          Int      @id @default(autoincrement())
  studentID   String
  date        DateTime
  studentName String
}

model AbsenceLog {
  id        Int      @id @default(autoincrement())
  studentID String
  date      DateTime
  state     Boolean
}

model Memo {
  id          Int   @id @default(autoincrement())
  studentID   String
  student     Student  @relation(fields: [studentID], references: [studentID])
  content     String
  time        DateTime
}

model TeacherName {
  id          Int   @id @default(autoincrement())
  name        String
  date        DateTime @unique
}

