generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id         Int          @id @default(autoincrement())
  name       String
  studentID  String       @unique
  grade      Int
  room       String
  classNo    String
  seat       Int
}

model NightClass {
  id          Int     @id @default(autoincrement())
  studentID   String
  className   String
  day         String
  end         DateTime
  start       DateTime
  studentName String
}

model Teacher {
  id      Int    @id @default(autoincrement())
  grade   Int
  classNo String
  name    String

  @@unique([grade, classNo])
}

model Leave {
  id          Int      @id @default(autoincrement())
  studentID   String
  start       DateTime
  end         DateTime
  studentName String
  reason      String
}

model AbsenceLog {
  id        Int      @id @default(autoincrement())
  studentID String
  date      DateTime
  state     Boolean
}

