generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  type  String
}

model Class {
  id    Int     @id @default(autoincrement())
  name  String
  type  Int
}

model Student {
  id        Int     @id @default(autoincrement())
  name      String
  studentID String
  classID   Int
}

model NightClass {
  id        Int     @id @default(autoincrement())
  studentID String
  className String
  day       Int
  time      Int
}

model ClassTeacher {
  id      Int     @id @default(autoincrement())
  classID Int
  name    String
}

model LeaveList {
  id      Int     @id @default(autoincrement())
  start   DateTime
  end     DateTime
}

model AbsenceLog {
  id          Int     @id @default(autoincrement())
  studentID   String
  date        DateTime
}

