generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id            Int     @id @default(autoincrement())
  grade         Int
  classNo       String
  seat          Int
  name          String
  studentID     String  @unique
  room          String
  nightClass    NightClass[]
}

model NightClass {
  id            Int     @id @default(autoincrement())
  studentID     String
  studentName   String
  className     String
  day           String
  start         Int
  end           Int
  student       Student @relation(fields: [studentID], references: [studentID])
}

model Teacher {
  id      Int     @id @default(autoincrement())
  grade   Int
  classNo   String
  name    String

  @@unique([grade, classNo])
}

model Leave {
  id            Int     @id @default(autoincrement())
  studentID     String
  studentName   String
  start         DateTime
  end           DateTime
}

model AbsenceLog {
  id          Int     @id @default(autoincrement())
  studentID   String
  date        DateTime
  state       Boolean //False: absence
}

